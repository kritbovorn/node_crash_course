<div class="blogs content">
    <h2>All Blogs</h2>

    <% if (blogs.length > 0) {%>
        <% blogs.forEach((blog) => {%>
            <h3 class="title"><%= blog.title %></h3>
            <p class="snippet"><%= blog.snippet %></p>
        <%});%>
    <%} else {%>
        <h3>...There are no Blogs to display...</h3>
    <% } %>
</div>